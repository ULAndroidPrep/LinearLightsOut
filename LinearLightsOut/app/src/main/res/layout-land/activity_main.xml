<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context="edu.rosehulman.fisher.linearlightsout.MainActivity">

    <LinearLayout
        android:id="@+id/gameButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button0"
            android:tag="0"
            style="@style/LightButton"
            android:text="0"/>
        <Button
            android:id="@+id/button1"
            android:tag="1"
            style="@style/LightButton"
            android:text="0"/>
        <Button
            android:id="@+id/button2"
            android:tag="2"
            style="@style/LightButton"
            android:text="0"/>
        <Button
            android:id="@+id/button3"
            android:tag="3"
            style="@style/LightButton"
            android:text="0"/>
        <Button
            android:id="@+id/button4"
            android:tag="4"
            style="@style/LightButton"
            android:text="0"/>
        <Button
            android:id="@+id/button5"
            android:tag="5"
            style="@style/LightButton"
            android:text="0"/>
        <Button
            android:id="@+id/button6"
            android:tag="6"
            style="@style/LightButton"
            android:text="0"/>

        <Button
            android:id="@+id/newGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gameButtons"
            android:layout_alignRight="@id/gameButtons"
            android:layout_marginLeft="10dp"
            android:onClick="pressedNewGame"
            android:text="@string/new_game"/>

    </LinearLayout>

    <TextView
        android:id="@+id/gameStateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/gameButtons"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:text="@string/label_start"/>


</RelativeLayout>
